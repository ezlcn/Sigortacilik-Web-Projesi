@model Sigortaci.Models.Message
@{
    ViewBag.Title = "GetMessage";
}

<div class="form-group">
    <label class="control-label col-sm-2">İsim:</label>
    <div class="col-sm-10">
        <span>
            @Model.Name
        </span>
    </div>
</div>
<div class="form-group">
    <label class="control-label col-sm-2">Email:</label>
    <div class="col-sm-10">
        <span>
            @Model.MailAdress
        </span>
    </div>
</div>
<div class="form-group">
    <label class="control-label col-sm-2">Konu:</label>
    <div class="col-sm-10">
        <span>
            @Model.Subject
        </span>
    </div>
</div>
<div class="form-group">
    <label class="control-label col-sm-2">Mesaj Tarihi: @Model.CreatedDate</label>
    <div class="col-sm-10">
        <span>
            @Model.Body
        </span>
    </div>
</div>
<div class="form-group">
    <div class="submit_wrap">
        <a href="/Home/ListMessage/" class="btn btn-primary">Geri</a> 
        <a href="/Home/DeleteMessage/@Model.Id" class="btn btn-danger">Sil</a> 
    </div>
    
</div>


