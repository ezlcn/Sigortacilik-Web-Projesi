@model Sigortaci.Models.Campaign
@{
    ViewBag.Title = "UpdateCampaign";
}

<form class="form-horizontal" action="/Home/UpdateCampaign" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label class="control-label col-sm-2">Kampanya Adı:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" value="@Model.Name" name="Name">
            <input type="hidden" name="Id" value="@Model.Id" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">Kampanya Resim:</label>
        <div class="col-sm-10">
            <img style="width:300px;height:200px;" src="~/img/@Model.ImgLink" />
            <input type="file" id="myFile" name="file">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">Kısa Açıklama:</label>
        <div class="col-sm-10">
            <textarea style="
    width: 100%;
" name="ShortDesc" id="summernote">@Model.ShortDesc</textarea>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">Açıklama:</label>
        <div class="col-sm-10">
            <textarea style="
    width: 100%;
" name="Desc" id="summernote">@Model.Desc</textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="submit_wrap">
            <button type="submit" class="btn btn-primary">Düzenle</button>
        </div>
        <div class="submit_wrap">
            <p class="text"></p>
        </div>
    </div>
</form>
